@model Categoria
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutADM.cshtml";
}

<div class="card">
    <div class="card-header">
        <h1 class="text-center">Eliminar Categoria</h1>
    </div>
