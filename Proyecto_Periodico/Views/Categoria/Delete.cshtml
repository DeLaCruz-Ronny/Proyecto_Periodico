        <form method="post" asp-action="Delete" asp-controller="Categoria">
            <div class="row">
                <div class="col-12 mb-3">
                    <input asp-for="IdCategoria" type="hidden" />
                </div>
                <div class="col-12 mb-3">
                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre Categoria" readonly />
                </div>
