@model List<Categoria>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutADM.cshtml";
}

<div class="card">
    <div class="card-header">
        <h1 class="text-center">Lista de categorias</h1>
    </div>
    <div class="card-body">
        <a class="btn btn-success" asp-action="Create" asp-controller="Categoria">Agregar Categoria</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdCategoria</td>
                        <td>@item.Nombre</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-controller="Categoria" asp-route-IdCategoria="@item.IdCategoria">Editar</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Categoria" asp-route-IdCategoria="@item.IdCategoria">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
