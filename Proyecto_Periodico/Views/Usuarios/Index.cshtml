@model List<Proyecto_Periodico.Models.Usuario>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutADM.cshtml";
}


<div class="card">
    <div class="card-header">
        <h1 class="text-center">Lista de usuarios</h1>
    </div>
    <div class="card-body">
        <a class="btn btn-success" asp-action="Create" asp-controller="Usuarios">Agregar Usuario</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdUsuario</td>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Correo</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-controller="Usuarios" asp-route-IdUsuario="@item.IdUsuario">Editar</a> | 
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Usuarios" asp-route-IdUsuario="@item.IdUsuario">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
